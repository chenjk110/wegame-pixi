{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "lib": ["DOM", "ESNext"],
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@": ["./src"],
            "@/*": ["./src/*"],
            "@engine": ["./src/engine"],
            "@engine/*": ["./src/engine/*"]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true
    }
}
